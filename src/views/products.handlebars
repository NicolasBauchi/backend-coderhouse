<header>
  <nav>
    {{#if userLoged.loged}}
      <a href="/api/session/logout"><li>Logout</li></a>
    {{else}}
      <a href="/login"><li>Login</li></a>
    {{/if}}

    <a href="/register"><li>Register</li></a>

    <a href="/products"><li>Products</li></a>
  </nav>
</header>

<div id="listado">

  {{#if errorPage}}
    <h1> Ocurrió un error. Página solicida no existe.</h1>

  {{else}}

    {{#if userLoged.loged}}
      <div id="tituloUser">
        <h4>Bienvenido
          {{userLoged.first_name}}
          {{userLoged.last_name}}</h4>
        <span>(cuenta: {{userLoged.role}})</span>
      </div>
    {{/if}}
    <ul>
      {{#each docs}}
        <li>
          <div><b>ID:</b> {{this.id}}</div>
          <div><b>Title:</b> {{this.title}}</div>
          <div><b>Description:</b> {{this.description}}</div>
          <div><b>Price:</b> {{this.price}}</div>
          <div><b>Thumbnail:</b> {{this.thumbnail}}</div>
          <div><b>Code:</b> {{this.code}}</div>
          <div><b>Stock:</b> {{this.stock}}</div>
          <div><b>Category:</b> {{this.category}}</div>
          <div><b>Status:</b> {{this.status}}</div>
          <div><button><b>Agregar al carrito</b></button></div>
        </li>
      {{/each}}
    </ul>

    {{#if hasPrevPage}}
      <a href="/products/?page={{prevPage}}"><button>Anterior</button></a>
    {{/if}}

    {{#if hasNextPage}}
      <a href="/products/?page={{nextPage}}"><button>Siguiente</button></a>
    {{/if}}
  {{/if}}

</div>